<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/organization_list_fragment">

    <fragment
        android:id="@+id/organization_list_fragment"
        android:name="de.glasparlament.organization.OrganizationListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/organization_list_fragment">
        <action
            android:id="@+id/action_organization_list_fragment_to_meeting_list_fragment"
            app:destination="@id/meeting_list_fragment" />
    </fragment>

    <fragment
        android:id="@+id/meeting_list_fragment"
        android:name="de.glasparlament.meeting.MeetingListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/meeting_list_fragment">
        <argument
            android:name="meetingListId"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />

        <action
            android:id="@+id/action_meeting_list_fragment_to_agenda_fragment"
            app:destination="@id/agenda_fragment" />
    </fragment>

    <fragment
        android:id="@+id/agenda_fragment"
        android:name="de.glasparlament.agendaitem.overview.AgendaItemFragment"
        android:label="@string/app_name"
        tools:layout="@layout/agenda_item_fragment">
        <argument
            android:name="meetingId"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />

        <action
            android:id="@+id/action_agenda_fragment_to_agenda_item_fragment"
            app:destination="@id/agenda_item_fragment" />
    </fragment>

    <fragment
        android:id="@+id/agenda_item_fragment"
        android:name="de.glasparlament.agendaitem.detail.AgendaItemDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/agenda_item_fragment">
        <argument
            android:name="agendaId"
            app:argType="string" />
    </fragment>

</navigation>